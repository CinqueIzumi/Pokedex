<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_splash</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/pokedex_logo_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Pokedex</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>